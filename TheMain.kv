<FrontPage>:
    cols: 1
    search_input : search_input
    search_button : search_button
    summary_button : summary_button
	sites_status_button : sites_status_button
    
    GridLayout:
        cols: 1
        size: root.width - 200, root.height -200
        pos: 100, 100
        
        Label:
            text : "Custom News"
        
        Label:
            text : "La Une"
    
        Button:
            text : "Summary"
            on_press : root.changer(target="SummaryPage")
            id : summary_button
        
        TextInput:
            id : search_input
            multiline:False
            
        Button:
            text : "Search"
            on_press: root.search(search_input)
            id: search_button

        Button:
            text : "Sites Status Refresh"
			on_press: root.refresh_all()
			id: refresh_button
		
		Button:
            text : "Sites Status"
            on_press: root.changer(target="SitesStatusPage")
            id : sites_status_button
		

        Label:
            text : "Network status"
        
<SitesStatusPage>:
    GridLayout:
        cols:1
        Button:
            text : "FrontPage"
            on_press : root.changer(target="FrontPage")
            id : frontPageButton
        
            
        
